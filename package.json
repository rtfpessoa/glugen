{
  "name": "glugen",
  "version": "0.1.0",
  "homepage": "https://glugen.rtfpessoa.xyz",
  "description": "OpenAPI Typescript HTTP Client Generator",
  "keywords": [
    "openapi",
    "swagger",
    "http",
    "client",
    "generator",
    "codegen",
    "typescript"
  ],
  "author": {
    "name": "Rodrigo Fernandes",
    "email": "rtfrodrigo@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/rtfpessoa/glugen.git"
  },
  "bugs": {
    "url": "https://github.com/rtfpessoa/glugen/issues"
  },
  "engines": {
    "node": ">=10.13"
  },
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore '**/*.{js,jsx,ts,tsx,json}'",
    "lint:check": "yarn run eslint",
    "lint:fix": "yarn run eslint --fix",
    "prettier": "prettier --ignore-path .gitignore '**/*.+(js|jsx|ts|tsx|json|css|html|md|mdx)'",
    "format:check": "yarn run prettier --check",
    "format:fix": "yarn run prettier --write",
    "build": "yarn run build:es5 && yarn run build:esm",
    "build:es5": "rm -rf lib; tsc -p tsconfig.json --outDir lib",
    "build:esm": "rm -rf lib-esm; tsc -p tsconfig.json -m es6 --outDir lib-esm",
    "gen": "yarn run gen:toc",
    "gen:toc-base": "markdown-toc --maxdepth 3 --bullets='-' -i",
    "gen:toc": "yarn run gen:toc-base README.md",
    "test": "is-ci 'test:coverage' 'test:watch'",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "coverage:open": "yarn run test:coverage && open ./coverage/index.html",
    "coverage:push": "cat ./coverage/lcov.info | codacy-coverage",
    "validate": "yarn run format:check && yarn run lint:check && yarn run build && yarn run test:coverage",
    "fix": "yarn run format:fix && yarn run lint:fix",
    "preversion": "yarn run validate",
    "version": "git add -A package.json"
  },
  "bin": {
    "glugen": "./bin/glugen"
  },
  "main": "./lib/glugen.js",
  "module": "./lib-esm/glugen.js",
  "types": "./lib/glugen.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx|json)": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.+(css|html|md|mdx)": [
      "prettier --write"
    ],
    "README.md": [
      "yarn run gen:toc-base"
    ]
  },
  "dependencies": {
    "@openapi-contrib/openapi-schema-to-json-schema": "^3.0.0",
    "swagger-parser": "^8.0.4",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@types/jest": "25.1.3",
    "@types/mkdirp": "1.0.0",
    "@types/node": "13.7.4",
    "@types/node-fetch": "^2.5.4",
    "@types/nopt": "3.0.29",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "codacy-coverage": "3.4.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.7.0",
    "eslint-plugin-json": "2.1.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-optimize-regex": "1.1.7",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-sonarjs": "0.5.0",
    "husky": "4.2.3",
    "is-ci-cli": "2.0.0",
    "jest": "25.1.0",
    "lint-staged": "10.0.7",
    "markdown-toc": "^1.2.0",
    "mkdirp": "1.0.3",
    "nopt": "4.0.1",
    "node-fetch": "^2.6.0",
    "jsonschema": "^1.2.5",
    "openapi-types": "^1.3.5",
    "prettier": "1.19.1",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "typescript": "3.8.2"
  },
  "license": "MIT",
  "files": [
    "bin",
    "lib",
    "lib-esm"
  ]
}
